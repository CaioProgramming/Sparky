<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    app:cardCornerRadius="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="?android:textColorPrimary"
    app:cardBackgroundColor="@color/material_grey900"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="64dp"
    android:layout_height="64dp">

    <ImageView
        android:src="@drawable/ic_iconmonstr_connection_1"
        android:id="@+id/icon_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_default_16dp"
        app:tint="@color/md_white" />

</com.google.android.material.card.MaterialCardView>
