<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/podcast_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_default_10dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/podcast_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:civ_border_color="?android:textColorPrimary"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/material_grey900"
        tools:src="@drawable/ic_round_podcasts_24"
        tools:tint="@color/material_yellowA700" />

    <TextView
        android:id="@+id/podcast_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:paddingVertical="@dimen/padding_default_16dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        tools:text="Flow podcast" />

</LinearLayout>


