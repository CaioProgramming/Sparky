<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sparky" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/md_black</item>
        <item name="colorPrimary">@color/material_yellow700</item>
        <item name="colorPrimaryDark">@color/material_yellow800</item>
        <item name="colorAccent">@color/material_yellowA700</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:textViewStyle">@style/Theme.Sparky.TextViewStyle</item>
        <item name="toolbarStyle">@style/Theme.Sparky.Toolbar</item>
    </style>

    <style name="Theme.Sparky.TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="Theme.Sparky.Title" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/kaushan_script</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Sparky.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleCentered">true</item>
        <item name="titleTextAppearance">@style/Theme.Sparky.Title</item>
        <item name="homeAsUpIndicator">@drawable/ic_round_chevron_left_24</item>
    </style>

    <style name="Theme.Sparky.ProgramIcon">
        <item name="android:importantForAccessibility">no</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="civ_circle_background_color">@color/material_grey900</item>
        <item name="civ_border_width">1dp</item>
        <item name="civ_border_color">@color/md_white</item>
    </style>

    <style name="Theme.Sparky.BottomButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColor">@color/md_black</item>
        <item name="iconTint">@color/md_black</item>
        <item name="background">@color/md_white</item>
        <item name="android:background">@color/md_white</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="iconGravity">end</item>
        <item name="icon">@drawable/ic_arrow_right_24</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

</resources>