<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.podcast.PodcastFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profile_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:colorBackground"
        android:visibility="gone"
        app:elevation="0dp"
        tools:visibility="visible">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/profile_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?android:colorBackground"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:scrimAnimationDuration="200">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="?attr/actionBarSize"
                app:layout_collapseMode="parallax">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_default_16dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="205dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_default_10dp"
                        android:layout_marginRight="@dimen/margin_default_10dp"
                        android:alpha="0.5"
                        android:background="@drawable/faded_gradient"
                        android:backgroundTint="?attr/colorPrimaryDark" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/user_card"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/margin_default_10dp"
                        app:cardCornerRadius="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="?android:textColorPrimary"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?android:colorBackground"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/eye" />

                    </com.google.android.material.card.MaterialCardView>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default_10dp"
                        android:elevation="4dp"
                        app:layout_anchor="@id/user_card"
                        app:layout_anchorGravity="bottom|right">

                        <View
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="@dimen/margin_big_16dp"
                            android:layout_marginTop="@dimen/margin_big_16dp"
                            android:background="@color/md_white"
                            android:gravity="center"
                            android:lines="2"
                            app:layout_anchorGravity="bottom|right" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="@dimen/margin_default_10dp"
                            android:layout_marginVertical="@dimen/margin_small_4dp"
                            android:background="@drawable/stroked_retangle"
                            android:gravity="center"
                            android:lines="2"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                            android:textStyle="bold"
                            tools:text="Igor 3k" />

                        <TextView
                            android:id="@+id/realName"
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_below="@id/username"
                            android:layout_marginHorizontal="@dimen/margin_default_10dp"
                            android:background="@drawable/stroked_retangle_primary"
                            android:gravity="center"
                            android:lines="2"
                            android:text="@string/app_name"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                            android:textColor="@color/md_black"
                            android:textStyle="italic|bold" />

                    </RelativeLayout>


                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/link_flow"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_big_16dp"
                    android:drawableStart="@drawable/ic_baseline_flash_on_24"
                    android:drawableTint="?attr/colorPrimaryDark"
                    android:text="Vincular conta flow" />


                <TextView
                    android:id="@+id/badges_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textColor="@color/md_white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="emblemas"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="@color/md_white" />

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:alpha="0"
                android:background="@drawable/bottom_line"
                android:backgroundTint="@color/material_grey900" />

            <TextView
                android:id="@+id/userNameTitle"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:alpha="0"
                android:fontFamily="@font/kaushan_script"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_collapseMode="pin" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/padding_default_16dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_round_more_horiz_24" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/music"
        app:lottie_repeatMode="reverse"
        app:lottie_speed="0.5" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_badges"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:spanCount="3"
        tools:listitem="@layout/badge_layout"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
