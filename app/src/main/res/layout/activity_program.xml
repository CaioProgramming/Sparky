<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.podcast.ProgramActivity">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:background="?android:colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                app:contentScrim="?android:colorBackground"
                app:scrimAnimationDuration="200"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="@drawable/double_faded_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    app:layout_collapseMode="parallax"
                    android:layout_marginVertical="?attr/actionBarSize"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginVertical="@dimen/margin_default_10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ProgressBar
                            android:id="@+id/live_progress_bar"
                            android:visibility="invisible"
                            tools:visibility="visible"
                            android:indeterminateDuration="15000"
                            android:indeterminate="true"
                            android:layout_width="200dp"
                            android:layout_height="200dp"/>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/program_icon"
                            style="@style/Theme.Sparky.ProgramIcon"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_round_podcasts_24" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/hosts_title"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:textAlignment="center"
                        android:padding="@dimen/padding_default_16dp"
                        android:textAppearance="@style/Ilustris.Title"
                        android:text="Apresentado por"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="vertical"
                        android:id="@+id/hosts_recycler_view"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        tools:listitem="@layout/host_layout"
                        tools:itemCount="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/program_toolbar"
                    android:layout_gravity="top"
                    app:title=" "
                    app:layout_collapseMode="pin"
                    app:menu="@menu/program_menu"
                    android:background="?android:colorBackground"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:id="@+id/program_name"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:fontFamily="@font/kaushan_script"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            app:lottie_rawRes="@raw/audio"
            app:lottie_speed="0.5"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_gravity="center|top"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/video_preview"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"
            android:id="@+id/channel_videos"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/error_view"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Ocorreu um erro ao recuperar os dados :("
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>