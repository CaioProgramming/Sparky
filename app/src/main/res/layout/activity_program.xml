<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".program.ProgramActivity">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:background="?android:colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                app:contentScrim="?android:colorBackground"
                app:scrimAnimationDuration="200"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <View
                    android:background="@drawable/double_faded_gradient"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    app:layout_collapseMode="parallax"
                    android:layout_marginVertical="?attr/actionBarSize"
                    android:padding="@dimen/padding_default_16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/program_icon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        style="@style/Theme.Sparky.ProgramIcon"
                        android:src="@drawable/ic_round_podcasts_24"
                        android:layout_gravity="center" />

                    <TextView
                        android:paddingVertical="@dimen/padding_default_16dp"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="Hosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginVertical="@dimen/margin_default_10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/host_one_pic"
                            app:civ_border_width="2dp"
                            app:civ_border_color="?attr/colorPrimary"
                            tools:src="@drawable/ic_baseline_wechat_24"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/host_two_pic"
                            app:civ_border_width="2dp"
                            android:layout_marginStart="-10dp"
                            app:civ_border_color="?attr/colorAccent"
                            tools:src="@drawable/ic_baseline_wechat_24"
                            android:layout_width="100dp"
                            android:layout_height="100dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:paddingVertical="@dimen/padding_default_16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:layout_marginHorizontal="@dimen/margin_default_10dp"
                            android:id="@+id/twitch_link"
                            android:src="@drawable/ic_iconmonstr_twitch"
                            android:stateListAnimator="@animator/list_animator"
                            android:background="@color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/material_purple300" />
                        <ImageButton
                            android:layout_marginHorizontal="@dimen/margin_default_10dp"
                            android:stateListAnimator="@animator/list_animator"
                            android:id="@+id/instagram_link"
                            android:src="@drawable/ic_iconmonstr_instagram_11"
                            android:background="@color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/material_pink300" />
                        <ImageButton
                            android:layout_marginHorizontal="@dimen/margin_default_10dp"
                            android:stateListAnimator="@animator/list_animator"
                            android:id="@+id/twitter_link"
                            android:src="@drawable/ic_iconmonstr_twitter"
                            android:background="@color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/material_blue300" />


                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_gravity="bottom"
                    android:background="@drawable/bottom_line"
                    android:backgroundTint="?attr/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                </androidx.appcompat.widget.Toolbar>

                <TextView
                    android:id="@+id/program_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kaushan_script"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            app:lottie_rawRes="@raw/audio"
            app:lottie_speed="0.5"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_gravity="center|top"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/video_preview"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"
            android:id="@+id/channel_videos"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/error_view"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Ocorreu um erro ao recuperar os dados :("
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>