<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/video_card"
        app:cardBackgroundColor="@color/black"
        android:stateListAnimator="@animator/list_animator"
        app:cardCornerRadius="@dimen/radius_small_5dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="?android:textColorPrimary"
        android:layout_margin="@dimen/margin_default_10dp"
        android:layout_width="180dp"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/video_thumb"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_baseline_wechat_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:padding="@dimen/margin_default_10dp"
            android:background="@drawable/faded_gradient"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textStyle="bold"
                tools:text="Flows podcre #1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/white"
                android:id="@+id/publish_date"
                tools:text="12 de Outubro de 2021"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>