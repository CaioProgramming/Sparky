<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small_8dp"
    android:stateListAnimator="@animator/scale_down_animator"
    app:cardBackgroundColor="?android:colorBackground"
    app:cardCornerRadius="0dp"
    app:strokeColor="@color/material_grey900"
    app:strokeWidth="2dp">

    <ImageView
        android:id="@+id/video_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/icon_placeholder"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_iconmonstr_flower" />


    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/faded_gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/padding_default_16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/md_white"
            android:textStyle="bold"
            tools:text="Flows podcre #1" />

        <TextView
            android:id="@+id/publish_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/md_white"
            tools:text="12 de Outubro de 2021" />


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
