<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize"
        tools:context=".programs.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            app:elevation="0dp"
            android:background="?android:colorBackground"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/black"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <com.airbnb.lottie.LottieAnimationView
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/lightning"
                    app:lottie_colorFilter="?attr/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_big_16dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_gravity="bottom"
                    android:id="@+id/programs_recycler"
                    app:layout_collapseMode="parallax"
                    android:clipToPadding="false"
                    tools:listitem="@layout/program_icon_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_default_10dp"
                    android:layout_marginBottom="?attr/actionBarSize"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/home_toolbar"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/bottom_line"
                    android:backgroundTint="?attr/colorPrimaryDark"
                    android:fontFamily="@font/kaushan_script"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="italic"
                    app:layout_collapseMode="pin" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channel_eps_recycler"
            tools:listitem="@layout/video_group_layout"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>