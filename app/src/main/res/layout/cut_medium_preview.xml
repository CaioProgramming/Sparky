<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@animator/scale_down_animator"
    android:visibility="gone"
    app:cardBackgroundColor="@color/material_black"
    app:cardCornerRadius="0dp"
    app:strokeColor="@color/md_white"
    app:strokeWidth="1dp"
    tools:visibility="visible">


    <ImageView
        android:id="@+id/video_thumb"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@color/md_black"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_iconmonstr_connection_1" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/podcast_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="@dimen/margin_default_10dp"
        android:src="@drawable/ic_iconmonstr_connection_1"
        app:civ_border_color="@color/md_white"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/material_grey900" />


</com.google.android.material.card.MaterialCardView>
